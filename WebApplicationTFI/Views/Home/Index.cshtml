@{
    ViewBag.Title = "Home Page";

    if (Session["layout"].ToString() == "~/Views/Shared/_AmministrativoLayout.cshtml")
    {

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">

                        <!-- /.card -->
                        <!-- PIE CHART -->
                        <div class="card card-danger">
                            <div class="card-header" style="background:#0c773c">
                                <h3 class="card-title">TFR</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="pieChartTFR" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- PIE CHART -->
                        <div class="card card-danger">
                            <div class="card-header" style="background:#0c773c">
                                <h3 class="card-title">Fondo</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="pieChartFondo" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- PIE CHART -->
                        <div class="card card-danger">
                            <div class="card-header" style="background:#0c773c">
                                <h3 class="card-title">Anticipazioni TFR</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="pieChartAntTFR" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->


                    </div>
                    <!-- /.col (LEFT) -->

                    <div class="col-md-6">
                        <!-- DONUT CHART -->
                        <div class="card card-danger">
                            <div class="card-header" style="background:#0c773c">
                                <h3 class="card-title">Tipologie Liquidati TFR</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="donutChartTFR" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                        <!-- DONUT CHART -->
                        <div class="card card-danger">
                            <div class="card-header" style="background:#0c773c">
                                <h3 class="card-title">Tipologie Liquidati Fondo</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <canvas id="donutChartFondo" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->


                    </div>
                    <!-- /.col (RIGHT) -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>


        <!-- jQuery -->
        <script src="/plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- ChartJS -->
        <script src="/plugins/chart.js/Chart.min.js"></script>

        <script>
            $(function () {

                var donutData = {
                    labels: [
                        'Ordinari',
                        'Anticipazioni',
                        'Suppletive',
                    ],
                    datasets: [
                        {
                            data: [700, 500, 400],
                            backgroundColor: ['#f56954', '#00a65a', '#f39c12'],
                        }
                    ]
                }

                var donutData2 = {
                    labels: [
                        'Ordinari',
                        'Anticipazioni',
                        'Suppletive',
                        'Assegni di morte',
                        'Invalidità',
                    ],
                    datasets: [
                        {
                            data: [700, 500, 400, 700, 500, 400],
                            backgroundColor: ['#f56954', '#00a65a', '#f39c12','blue','grey','lime'],
                        }
                    ]
                }

                var donutChartCanvas = $('#donutChartTFR').get(0).getContext('2d')
                
                var donutOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(donutChartCanvas, {
                    type: 'doughnut',
                    data: donutData,
                    options: donutOptions
                })

                var donutChartCanvas = $('#donutChartFondo').get(0).getContext('2d')

                var donutOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(donutChartCanvas, {
                    type: 'doughnut',
                    data: donutData2,
                    options: donutOptions
                })

                var pieData = {
                    labels: [
                        'Liquidabili',
                        'Liquidati',

                    ],
                    datasets: [
                        {
                            data: [700, 500],
                            backgroundColor: ['#f56954', 'blue'],
                        }
                    ]
                }
                var pieData2 = {
                    labels: [
                        'Liquidabili',
                        'Liquidati',

                    ],
                    datasets: [
                        {
                            data: [100, 900],
                            backgroundColor: ['#3c8dbc', 'darkorchid'],
                        }
                    ]
                }
                var pieData3 = {
                    labels: [
                        'Residuo',
                        'Erogato',

                    ],
                    datasets: [
                        {
                            data: [600, 1300],
                            backgroundColor: ['#f39c12', 'black'],
                        }
                    ]
                }
                //-------------
                //- PIE CHART -
                //-------------
                // Get context with jQuery - using jQuery's .get() method.
                var pieChartCanvas = $('#pieChartTFR').get(0).getContext('2d')
                var pieData = pieData;
                var pieOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(pieChartCanvas, {
                    type: 'pie',
                    data: pieData,
                    options: pieOptions
                })

                //-------------
                //- PIE CHART -
                //-------------
                // Get context with jQuery - using jQuery's .get() method.
                var pieChartCanvas = $('#pieChartFondo').get(0).getContext('2d')
                var pieData = pieData2;
                var pieOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(pieChartCanvas, {
                    type: 'pie',
                    data: pieData,
                    options: pieOptions
                })

                //-------------
                //- PIE CHART -
                //-------------
                // Get context with jQuery - using jQuery's .get() method.
                var pieChartCanvas = $('#pieChartAntTFR').get(0).getContext('2d')
                var pieData = pieData3;
                var pieOptions = {
                    maintainAspectRatio: false,
                    responsive: true,
                }
                //Create pie or douhnut chart
                // You can switch between pie and douhnut using the method below.
                new Chart(pieChartCanvas, {
                    type: 'pie',
                    data: pieData,
                    options: pieOptions
                })

            })
        </script>
    }
}





